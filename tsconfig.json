{
  "compilerOptions": {
    "target": "es2017",                                  
    "module": "commonjs",                                
    "typeRoots": ["node_modules/@types", "typings/app.d.ts", "src/types"],
    "outDir": "./dist",
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "noImplicitAny": false                              
  },
  "exclude": [
    "node_modules"
  ]
}
